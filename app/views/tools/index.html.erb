<% content_for :title, "法律AI工具目录" %>

<!-- Hero Section -->
<section class="gradient-surface py-12 px-4">
  <div class="container-xl mx-auto text-center">
    <h1 class="font-heading text-4xl lg:text-5xl font-bold text-primary mb-4">
      浏览法律AI工具
    </h1>
    <p class="text-lg text-secondary max-w-2xl mx-auto">
      探索 <%= Tool.count %>+ 强大的法律AI工具，涉及 <%= Category.count %> 个分类
    </p>
  </div>
</section>

<!-- Filter Bar -->
<section class="bg-surface border-b border-border sticky top-0 z-10 py-4 px-4">
  <div class="container-xl mx-auto">
    <%= form_with url: tools_path, method: :get, class: "flex flex-wrap gap-4 items-center" do |f| %>
      <!-- Search -->
      <div class="flex-1 min-w-[200px]">
        <div class="relative">
          <%= lucide_icon "search", class: "absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-muted" %>
          <%= f.text_field :q, 
              value: params[:q], 
              placeholder: "搜索工具...", 
              class: "w-full pl-10 pr-4 py-2 bg-surface-elevated border border-border rounded-lg text-sm text-primary focus:outline-none focus:border-primary" %>
        </div>
      </div>
      
      <!-- Pricing Filter -->
      <%= f.select :pricing, 
          options_for_select([['所有价格', ''], ['免费', 'Free'], ['部分免费', 'Freemium'], ['付费', 'Paid']], params[:pricing]),
          {}, 
          class: "form-select bg-surface-elevated border-border text-secondary rounded-lg px-4 py-2 focus:border-primary" %>
      
      <!-- Sort -->
      <%= f.select :sort, 
          options_for_select([['最新', 'newest'], ['最热门', 'popular']], params[:sort]),
          {}, 
          class: "form-select bg-surface-elevated border-border text-secondary rounded-lg px-4 py-2 focus:border-primary" %>
      
      <%= f.submit "筛选", class: "btn-primary btn-sm" %>
    <% end %>
  </div>
</section>

<!-- Tools Grid -->
<section class="py-12 px-4 bg-surface min-h-screen">
  <div class="container-xl mx-auto">
    <% if @tools.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @tools.each do |tool| %>
          <%= link_to tool_path(tool), class: "tool-card card bg-surface-elevated border border-border rounded-xl overflow-hidden block" do %>
            <!-- Tool Image -->
            <div class="aspect-video relative overflow-hidden bg-surface">
              <% if tool.logo_url.present? %>
                <img src="<%= tool.logo_url %>" alt="<%= tool.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
              <% else %>
                <div class="w-full h-full flex items-center justify-center gradient-primary">
                  <%= lucide_icon "sparkles", class: "w-12 h-12 text-surface-elevated" %>
                </div>
              <% end %>
              
              <!-- Price Badge -->
              <div class="absolute top-3 right-3">
                <span class="badge-<%= tool.pricing_type == 'Free' ? 'success' : tool.pricing_type == 'Freemium' ? 'info' : 'warning' %> badge-glow px-3 py-1 text-xs font-semibold rounded-full">
                  <%= tool.pricing_type %>
                </span>
              </div>
            </div>
            
            <!-- Tool Info -->
            <div class="p-4 space-y-3">
              <div class="flex items-start justify-between gap-2">
                <h3 class="font-heading text-lg font-semibold text-primary group-hover:text-primary-light transition-colors">
                  <%= tool.name %>
                </h3>
                <%= lucide_icon "external-link", class: "w-4 h-4 text-muted flex-shrink-0" %>
              </div>
              
              <p class="text-sm text-secondary line-clamp-2">
                <%= tool.short_description %>
              </p>
              
              <div class="flex items-center gap-2 pt-2">
                <% tool.categories.first(2).each do |category| %>
                  <span class="inline-flex items-center gap-1 px-2 py-1 bg-primary/10 border border-primary/30 rounded text-xs text-primary">
                    <%= lucide_icon "tag", class: "w-3 h-3" %>
                    <%= category.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <div class="flex justify-center">
        <%= paginate @tools, theme: 'tailwind' %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-surface-elevated border border-border rounded-full mb-4">
          <%= lucide_icon "search-x", class: "w-8 h-8 text-muted" %>
        </div>
        <h3 class="font-heading text-xl font-semibold text-primary mb-2">未找到工具</h3>
        <p class="text-secondary">请尝试调整筛选条件或搜索关键词</p>
      </div>
    <% end %>
  </div>
</section>
