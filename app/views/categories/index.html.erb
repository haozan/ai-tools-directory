<% content_for :title, "浏览所有分类" %>

<div class="bg-surface min-h-screen" data-controller="category-filter" data-category-filter-selected-value="all">  <!-- Split Layout: Categories Sidebar + Tools Grid -->
  <section class="py-8 px-4">
    <div class="container-xl mx-auto">
      <div class="flex gap-8 items-start">
        <!-- Left Sidebar: Categories List -->
        <aside class="w-80 flex-shrink-0">
          <div class="sticky top-0">
            <nav class="space-y-2">
              <!-- All Tools Option (Special) -->
              <div class="border-2 bg-primary/10 border-primary rounded-xl transition-all duration-300">
                <button 
                  type="button"
                  data-category-filter-target="categoryBtn"
                  data-category-id="all"
                  data-action="click->category-filter#selectCategory"
                  class="w-full text-left px-4 py-3 flex items-center gap-4 group">
                  <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-primary/20 to-primary/10 border-2 border-primary rounded-lg group-hover:from-primary/30 group-hover:to-primary/20 flex-shrink-0">
                    <%= lucide_icon "grid-3x3", class: "w-6 h-6 text-primary" %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="font-bold text-primary mb-1 text-lg">
                      所有工具
                    </h3>
                    <div class="flex items-center gap-2 text-muted text-sm">
                      <%= lucide_icon "zap", class: "w-4 h-4" %>
                      <span><%= Tool.count %> 工具</span>
                    </div>
                  </div>
                </button>
              </div>

              <% @categories.each do |category| %>
                <!-- Root Category -->
                <div class="border-2 border-border hover:border-primary hover:bg-surface-elevated rounded-xl transition-all duration-300">
                  <div class="flex items-center">
                    <button 
                      type="button"
                      data-category-filter-target="categoryBtn"
                      data-category-id="<%= category.id %>"
                      data-action="click->category-filter#selectCategory"
                      class="flex-1 text-left px-4 py-3 flex items-center gap-4 group">
                      <div class="flex items-center justify-center w-12 h-12 bg-primary/10 border border-primary/30 rounded-lg group-hover:bg-primary/20 flex-shrink-0">
                        <%= lucide_icon "folder", class: "w-6 h-6 text-primary" %>
                      </div>
                      <div class="flex-1 min-w-0">
                        <h3 class="font-semibold text-primary mb-1">
                          <%= category.name %>
                        </h3>
                        <div class="flex items-center gap-2 text-muted text-sm">
                          <%= lucide_icon "layers", class: "w-4 h-4" %>
                          <span><%= category.all_tools.count %> 工具</span>
                        </div>
                      </div>
                    </button>
                    <% if category.has_children? %>
                      <button
                        type="button"
                        data-category-id="<%= category.id %>"
                        data-action="click->category-filter#toggleChildren"
                        class="flex-shrink-0 p-3 text-secondary hover:text-primary transition-colors">
                        <%= lucide_icon "chevron-down", class: "w-5 h-5", style: "transform: rotate(-90deg); transition: transform 0.3s ease;" %>
                      </button>
                    <% end %>
                  </div>
                </div>
                  
                  <!-- Child Categories (if any) -->
                  <% if category.has_children? %>
                    <div 
                      data-category-filter-target="childrenContainer"
                      data-parent-id="<%= category.id %>"
                      class="ml-8 space-y-1 mt-1 hidden">
                      <% category.children.each do |child| %>
                        <button 
                          type="button"
                          data-category-filter-target="categoryBtn"
                          data-category-id="<%= child.id %>"
                          data-action="click->category-filter#selectCategory"
                          class="w-full text-left px-3 py-2 rounded-lg transition-all duration-300 flex items-center gap-3 group border border-transparent hover:border-primary/50 hover:bg-surface-elevated">
                          <div class="flex items-center justify-center w-8 h-8 bg-surface border border-border rounded-md group-hover:border-primary/50 flex-shrink-0">
                            <%= lucide_icon "folder-open", class: "w-4 h-4 text-secondary" %>
                          </div>
                          <div class="flex-1 min-w-0">
                            <h4 class="text-sm font-medium text-secondary group-hover:text-primary">
                              <%= child.name %>
                            </h4>
                            <div class="flex items-center gap-1 text-muted text-xs">
                              <span><%= child.tools_count %> 工具</span>
                            </div>
                          </div>
                        </button>
                      <% end %>
                    </div>
                  <% end %>
              <% end %>
            </nav>
          </div>
        </aside>

        <!-- Right Content: Tools Grid -->
        <main class="flex-1 min-w-0">
          <div data-category-filter-target="toolsContainer">
            <!-- Tools will be loaded here -->
            <div class="text-center py-12">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 border-2 border-primary/30 rounded-2xl mb-4">
                <%= lucide_icon "loader", class: "w-8 h-8 text-primary animate-spin" %>
              </div>
              <p class="text-secondary">加载中...</p>
            </div>
          </div>
        </main>
      </div>
    </div>
  </section>
</div>
