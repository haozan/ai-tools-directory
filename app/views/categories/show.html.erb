<% content_for :title, "#{@category.name} 法律AI工具" %>

<!-- Breadcrumb Navigation -->
<% if !@category.root? %>
  <section class="bg-surface-elevated py-4 px-4 border-b border-border">
    <div class="container-xl mx-auto">
      <nav class="flex items-center gap-2 text-sm">
        <% @category.ancestors.reverse.each do |ancestor| %>
          <%= link_to ancestor.name, category_path(ancestor), class: "text-secondary hover:text-primary transition-colors" %>
          <%= lucide_icon "chevron-right", class: "w-4 h-4 text-muted" %>
        <% end %>
        <span class="text-primary font-medium"><%= @category.name %></span>
      </nav>
    </div>
  </section>
<% end %>

<!-- Category Hero -->
<section class="gradient-surface py-12 px-4">
  <div class="container-xl mx-auto text-center">
    <h1 class="font-heading text-4xl lg:text-5xl font-bold text-primary mb-4">
      <%= @category.name %>
    </h1>
    <p class="text-lg text-secondary max-w-2xl mx-auto">
      <%= @category.description.presence || "探索 #{@category.name} 分类中的 #{@category.all_tools.count} 个法律AI工具" %>
    </p>
    <div class="mt-6 flex items-center justify-center gap-4">
      <span class="inline-flex items-center gap-2 px-4 py-2 bg-surface-elevated border border-border rounded-full text-secondary">
        <%= lucide_icon "layers", class: "w-4 h-4" %>
        <%= @category.all_tools.count %> 个工具
      </span>
      <% if @category.has_children? %>
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-surface-elevated border border-border rounded-full text-secondary">
          <%= lucide_icon "folder", class: "w-4 h-4" %>
          <%= @category.children.count %> 个子分类
        </span>
      <% end %>
    </div>
  </div>
</section>

<!-- Child Categories (if any) -->
<% if @category.has_children? %>
  <section class="py-8 px-4 bg-surface-elevated border-b border-border">
    <div class="container-xl mx-auto">
      <h2 class="font-heading text-2xl font-bold text-primary mb-6">子分类</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @category.children.each do |child| %>
          <%= link_to category_path(child), class: "group p-4 bg-surface border border-border rounded-xl hover:border-primary transition-all duration-300 flex items-center gap-3" do %>
            <div class="flex items-center justify-center w-12 h-12 bg-primary/10 border border-primary/30 rounded-lg group-hover:bg-primary/20 flex-shrink-0">
              <%= lucide_icon "folder-open", class: "w-6 h-6 text-primary" %>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-primary group-hover:text-primary-light transition-colors mb-1">
                <%= child.name %>
              </h3>
              <div class="flex items-center gap-1 text-muted text-sm">
                <%= lucide_icon "layers", class: "w-3 h-3" %>
                <span><%= child.tools_count %> 工具</span>
              </div>
            </div>
            <%= lucide_icon "chevron-right", class: "w-5 h-5 text-muted group-hover:text-primary transition-colors" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Tools Grid -->
<section class="py-12 px-4 bg-surface">
  <div class="container-xl mx-auto">
    <% if @tools.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
        <% @tools.each do |tool| %>
          <%= link_to tool_path(tool), class: "tool-card card bg-surface-elevated border border-border rounded-xl overflow-hidden block" do %>
            <div class="aspect-video relative overflow-hidden bg-surface">
              <% if tool.logo_image_url.present? %>
                <img src="<%= tool.logo_image_url %>" alt="<%= tool.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" decoding="async" />
              <% else %>
                <div class="w-full h-full flex items-center justify-center gradient-primary">
                  <%= lucide_icon "sparkles", class: "w-12 h-12 text-surface-elevated" %>
                </div>
              <% end %>

            </div>
            
            <div class="p-4 space-y-3">
              <div class="flex items-start justify-between gap-2">
                <h3 class="font-heading text-lg font-semibold text-primary group-hover:text-primary-light transition-colors">
                  <%= tool.name %>
                </h3>
                <%= lucide_icon "external-link", class: "w-4 h-4 text-muted flex-shrink-0" %>
              </div>
              
              <p class="text-sm text-secondary line-clamp-2">
                <%= tool.short_description %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Pagination -->
      <div class="flex justify-center mb-16">
        <%= paginate @tools, theme: 'tailwind' %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-surface-elevated border border-border rounded-full mb-4">
          <%= lucide_icon "inbox", class: "w-8 h-8 text-muted" %>
        </div>
        <h3 class="font-heading text-xl font-semibold text-primary mb-2">暂无工具</h3>
        <p class="text-secondary mb-6">成为第一个在该分类中提交工具的人</p>
        <%= link_to "提交工具", new_submission_path, class: "btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
