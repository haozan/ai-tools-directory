<% if tools.any? %>
  <!-- Tools Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 -mt-4">
    <% tools.each do |tool| %>
      <%= link_to tool_path(tool), class: "tool-card card bg-surface-elevated border border-border rounded-xl overflow-hidden block group hover:border-primary hover:shadow-lg hover:shadow-primary/10 transition-all duration-300" do %>
        <!-- Tool Image -->
        <div class="aspect-video relative overflow-hidden bg-surface">
          <% if tool.logo_image_url.present? %>
            <img src="<%= tool.logo_image_url %>" alt="<%= tool.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" decoding="async" />
          <% else %>
            <div class="w-full h-full flex items-center justify-center gradient-primary">
              <%= lucide_icon "sparkles", class: "w-12 h-12 text-surface-elevated" %>
            </div>
          <% end %>

        </div>
        
        <!-- Tool Info -->
        <div class="p-4 space-y-3">
          <div class="flex items-start justify-between gap-2">
            <h3 class="font-heading text-lg font-semibold text-primary group-hover:text-primary-light transition-colors">
              <%= tool.name %>
            </h3>
            <%= lucide_icon "external-link", class: "w-4 h-4 text-muted flex-shrink-0" %>
          </div>
          
          <p class="text-sm text-secondary line-clamp-2">
            <%= tool.short_description %>
          </p>
          
          <div class="flex items-center gap-2 pt-2">
            <% tool.categories.first(2).each do |cat| %>
              <span class="inline-flex items-center gap-1 px-2 py-1 bg-primary/10 border border-primary/30 rounded text-xs text-primary">
                <%= lucide_icon "tag", class: "w-3 h-3" %>
                <%= cat.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="text-center py-20">
    <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 border-2 border-primary/30 rounded-2xl mb-4">
      <%= lucide_icon "inbox", class: "w-8 h-8 text-primary" %>
    </div>
    <h3 class="font-heading text-xl font-semibold text-primary mb-2">
      <%= category.name %> 暂无工具
    </h3>
    <p class="text-secondary">
      此分类下还没有添加任何工具
    </p>
  </div>
<% end %>
