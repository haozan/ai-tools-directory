<% content_for :title, "Edit Category" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_categories_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Categories
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Edit Category</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |form| %>
        <!-- Parent Category -->
        <div class="form-group">
          <%= form.label :parent_id, "Parent Category (Optional)" %>
          <%= form.select :parent_id, 
              options_for_select([["无（一级分类）", nil]] + @parent_categories.map { |c| [c.name, c.id] }, @category.parent_id), 
              {}, 
              { class: "form-select" } %>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">如果不选择父分类，该分类将成为一级分类</p>
        </div>
      
        <!-- Name -->
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, placeholder: "Enter name..." %>
        </div>

        <!-- Slug -->
        <div class="form-group">
          <%= form.label :slug %>
          <%= form.text_field :slug, placeholder: "Enter slug..." %>
        </div>

        <!-- Description -->
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: 5, placeholder: "Enter description..." %>
        </div>

        <!-- Tools count -->
        <div class="form-group">
          <%= form.label :tools_count %>
          <%= form.number_field :tools_count, placeholder: "Enter tools count..." %>
        </div>
        
        <!-- Position -->
        <div class="form-group">
          <%= form.label :position, "Display Position (Optional)" %>
          <%= form.number_field :position, placeholder: "Enter position..." %>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">设置显示顺序（数字越小越靠前，留空则按工具数量排序）</p>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_category_path(@category.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Category", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
