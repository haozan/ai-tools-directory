<% content_for :title, @tool.respond_to?(:name) ? @tool.name : "Tool" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_tools_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Tools
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @tool.respond_to?(:name) ? @tool.name : "Tool ##{@tool.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_tool_path(@tool.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_tool_path(@tool.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this tool?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Tool Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Name</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tool.name %></div>
        </div>

        <!-- Website url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Website url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tool.website_url %></div>
        </div>

        <!-- Short description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Short description</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tool.short_description %></div>
        </div>

        <!-- Long description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Long description</label>
          <div class="prose prose-gray dark:prose-invert max-w-none">
            <%= simple_format(@tool.long_description) %>
          </div>
        </div>

        <!-- Logo url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Logo url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tool.logo_url %></div>
        </div>

        <!-- View count -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">View count</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @tool.view_count %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @tool.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @tool.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@tool.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @tool.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@tool.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
